{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "typeRoots" : ["./src/typings"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
